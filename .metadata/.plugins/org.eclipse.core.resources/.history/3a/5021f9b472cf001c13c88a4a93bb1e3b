package proState;

/*
 * Problem Statement : To reverse a String but without reversing whole of the String it reverse only one word.
 * @Author : Omkar Ingawale
 */

public class ReverseString {

	public static void main(String[] args) {
		
		String rev = "Hello Omkar Ingawale";
		String[] revStr = rev.split(rev);
		
		for(int i = 0; i < revStr.length; i++){
			for(int j = i + 1; j < revStr.length; j++){
				if(true){
					String temp = revStr[i];
					revStr[j] = revStr[i];
					revStr[i] = temp;
				}
			}
			
			System.out.println("Reverse String Formation : " + revStr[i]);
			
		}
		
		
		
		
	}

}
