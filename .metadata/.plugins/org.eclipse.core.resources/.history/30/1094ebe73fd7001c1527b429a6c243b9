package Java_Miniproject_14;

import java.awt.Font;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;


public class Calculator extends JFrame {

	private JPanel panel;
	private JButton btn1;
	private JButton btn2;
	private JButton btn3;
	private JButton btn4;
	
	Calculator(){
		panel = new JPanel();
		panel.setBorder(new EmptyBorder(5, 5, 5, 5));
		setContentPane(panel);
		panel.setLayout(null);
		
		btn1 = new JButton("Clear");
		btn1.setFont(new Font("Arial", Font.ITALIC, 14));
		btn1.setBounds(20, 90, 70, 30);
		panel.add(btn1);
		
		btn2 = new JButton("( )");
		btn2.setFont(new Font("Arial", Font.ITALIC, 14));
		btn2.setBounds(110, 90, 70, 30);
		panel.add(btn2);
		
		btn3 = new JButton("%");
		btn3.setFont(new Font("Arial", Font.ITALIC, 14));
		btn3.setBounds(200, 90, 70, 30);
		panel.add(btn3);
		
		btn4 = new JButton("÷");
		btn4.setFont(new Font("Arial", Font.BOLD, 18));
		btn4.setBounds(290, 90, 70, 30);
		panel.add(btn4);
		
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setLocation(400, 210);
		setTitle("Calculator");
		setSize(400, 300);
		setVisible(true);
		
	}
	
}
